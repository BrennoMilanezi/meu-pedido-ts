<div class="row">
    <div class="col s8">
        <div class="row">
            
            <% var i = 0 %>
            <% produtos.comidas.forEach(function (comida) { %>
            <div class="col-s6 caixa-respon" >
                <div class="row">
                    <div class="col-s12">
                        <div class="card blue-grey darken-1">
                            <div class="card-content white-text">
                              <p><%= comida.nome_produto %><i style="margin-left: 25%;cursor: pointer;" class="small material-icons">stars</i></p>
                            </div>
                            <div class="card-action">
                                <b id="<%= i %>"><%= comida.qnt_produto %></b> Unds.
                                <% var precoI = 'preco'+ i %>
                                <p>R$ <b id=<%= precoI %>><%= comida.preco_produto %></b><i style="margin-left: 25%;cursor: pointer;" class="small material-icons" onclick="add(<%= i %>)">add_circle</i></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% i++ }); %>
        </div>
    </div>
    <div class="caixa-finalizar col s4" style="background: #b9b5b5d4;">
        <div class="row">
            
            <div class="col-s12">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                          <p>COXINHA</p>
                    </div>
                    <div class="card-action">
                        <p>33 Unds.</p>
                        <p>R$ 13,00<i style="margin-left: 46%;cursor: pointer;" class="small material-icons">do_not_disturb_on</i></p>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row">
            
            <div class="col-s12">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                          <p>Total</p>
                    </div>
                    <div class="card-action">
                        <p>R$ <b id='total'>0</b></p>
                    </div>
                    <div class="card-action">
                        <a class="waves-effect waves-light btn" href="/pagamento">Finalizar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>