<!DOCTYPE html>
<html>
  <head>
    <title>Meu Pedido</title>
    <link rel='stylesheet' href='/stylesheets/style.css?v=1.0' />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <%- include('template/head') %>
    <script type="text/javascript">//<![CDATA[
        window.onload=function(){
        $(document).ready(function() {
            $('select').material_select();
        });
        }//]]> 
    
    </script>
  </head>
  <body class="login">

    <h3 class="title center-align">Pagamento</h3>
    <hr>
    <form>
      <div class="row">
        <div class="col-s13-m10">
           
           <div class="card white center-align home-respon" style="height:  -webkit-fill-available;">
            
                <div class="caixa-pagam col s4">
                    <h5 style="font-size:  135%;color: #fffefe;"><b>Forma de Pagamento</b></h5>
                    
                    <div class="row">
                       <form method="POST">
                            <select name="cartao">
                              <option value="0" multiple>Selecione...</option>
                              <% cartoes.forEach((cartao) => {%>
                              <% var i = 1 %>
                                  <option value="<%=i%>"><%= cartao.titular %></option>
                              <% i++ }) %>
                            </select>
                            <div class="card-action center-align">
                              <button class="waves-effect waves-light btn">Pagar</button>
                            </div>
                       </form>
                    </div>
                </div>
                
                <div class="caixa-pagam col s4" style="background: #b9b5b5d4;margin-left:1%;margin-top: 7%;">
                    <h5 style="font-size:  135%;color: #fffefe;"><b>Pedido</b></h5>
                    <div class="row">
                        
                        <div class="col s12">
                            <div class="card blue-grey darken-1">
                                <div class="card-content white-text">
                                      <p>COXINHA</p>
                                </div>
                                <div class="card-action">
                                    <p>33 Unds.</p>
                                    <p>R$ 13,00</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        
                        <div class="col s12">
                            <div class="card blue-grey darken-1">
                                <div class="card-content white-text">
                                      <p>Total</p>
                                </div>
                                <div class="card-action">
                                    <p>R$ 8001,00</p>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                </div>
           
        </div>
      </div>
    </div>
  </form>
    
      
  <%- include('template/scripts') %>
  </body>
</html>
